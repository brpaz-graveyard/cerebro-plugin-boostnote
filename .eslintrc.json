{
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "object-shorthand": "off",
    "arrow-body-style": "warn",
    "comma-dangle": "off",
    "class-methods-use-this": "off",
    "padded-blocks": "off",
    "no-restricted-syntax": "off",
    "max-len": "warn"
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "plugins": [
    "react"
  ],

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }

}
